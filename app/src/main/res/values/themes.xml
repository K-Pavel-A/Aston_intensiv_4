<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AstonIntensiv4" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="ClockViewStyle">@style/DefaultClockViewStyle</item>
    </style>
    
    <style name="DefaultClockViewStyle">
        <item name="secondHandColor">#DB1200</item>
        <item name="minuteHandColor">#DBC715</item>
        <item name="hourHandColor">#28DB18</item>
        <item name="clockFaceColor">#DBCAD4</item>
    </style>

</resources>